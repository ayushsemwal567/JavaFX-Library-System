<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.StudentRegistrationController"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">
   <children>
      <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30" 
            AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label text="🎓" style="-fx-font-size: 48px;"/>
            <Label text="Student Registration" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Create your library account" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;"/>
         </VBox>
         
         <!-- Registration Form -->
         <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 30;">
            
            <Label text="Personal Information" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            
            <GridPane hgap="15" vgap="10">
               
               <!-- Row 1 -->
               <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0">
                  <Label text="Full Name *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                  <TextField fx:id="nameField" promptText="Enter your full name" 
                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;"/>
               </VBox>
               
               <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
                  <Label text="Email *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                  <TextField fx:id="emailField" promptText="Enter your email" 
                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;"/>
               </VBox>
               
               <!-- Row 2 -->
               <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
                  <Label text="Phone" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                  <TextField fx:id="phoneField" promptText="Enter your phone number" 
                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;"/>
               </VBox>
               
               <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
                  <Label text="Department *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                  <ComboBox fx:id="departmentCombo" promptText="Select department" 
                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;"/>
               </VBox>
               
               <!-- Row 3 -->
               <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="0">
                  <Label text="Year of Study *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                  <ComboBox fx:id="yearCombo" promptText="Select year" 
                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;"/>
               </VBox>
               
               <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
                  <Label text="Address" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                  <TextArea fx:id="addressArea" promptText="Enter your address" 
                            style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;"/>
               </VBox>
            </GridPane>
            
            <Label text="* Required fields" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            
            <Button fx:id="registerButton" text="Register Student" onAction="#handleRegistration" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 200; -fx-pref-height: 40; -fx-cursor: hand;"/>
            
            <Label fx:id="messageLabel" textFill="#ff4444" style="-fx-font-weight: bold;"/>
            
            <!-- Back to Login -->
            <Button text="← Back to Login" onAction="#goBackToLogin" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 35; -fx-cursor: hand;"/>
         </VBox>
         
         <!-- Footer -->
         <Label text="© 2024 Library Management System" style="-fx-font-size: 12px; -fx-text-fill: #e0e0e0;"/>
      </VBox>
   </children>
</AnchorPane> 