<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.ViewBooksController">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Book Catalog" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TextField fx:id="searchField" promptText="Search books..." style="-fx-min-width: 200px;"/>
            <Button text="Search" onAction="#searchBooks"/>
            <Button text="Refresh" onAction="#refreshBooks"/>
        </HBox>
    </top>
    
    <center>
        <TableView fx:id="booksTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
                <TableColumn fx:id="authorColumn" text="Author" prefWidth="150"/>
                <TableColumn fx:id="yearColumn" text="Year" prefWidth="80"/>
                <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120"/>
                <TableColumn fx:id="quantityColumn" text="Total" prefWidth="60"/>
                <TableColumn fx:id="availableColumn" text="Available" prefWidth="80"/>
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Add New Book" onAction="#openAddBook"/>
            <Button text="Edit Book" onAction="#editBook"/>
            <Button text="Delete Book" onAction="#deleteBook"/>
            <Button text="Close" onAction="#closeWindow"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane> 