<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.MyBorrowingsController"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">
    
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 20;">
            <HBox alignment="CENTER" spacing="15">
                <Label text="My Borrowings" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="studentNameLabel" text="Student Name" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Summary Cards -->
            <HBox spacing="20" alignment="CENTER">
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 150;">
                    <Label fx:id="currentBorrowingsLabel" text="Current: 0" style="-fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                    <Label text="Borrowings" style="-fx-text-fill: #7f8c8d;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 150;">
                    <Label fx:id="overdueLabel" text="Overdue: 0" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                    <Label text="Books" style="-fx-text-fill: #7f8c8d;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-padding: 15; -fx-min-width: 150;">
                    <Label fx:id="totalFinesLabel" text="Fines: $0.00" style="-fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                    <Label text="Outstanding" style="-fx-text-fill: #7f8c8d;"/>
                </VBox>
            </HBox>
            <!-- Tab Pane for Different Views -->
            <TabPane fx:id="borrowingsTabPane" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;">
                <!-- Current Borrowings Tab -->
                <Tab text="Current Borrowings" closable="false">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Currently Borrowed Books:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Button text="Refresh" onAction="#refreshCurrentBorrowings" 
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 100; -fx-pref-height: 30; -fx-cursor: hand;"/>
                        </HBox>
                        <TableView fx:id="currentBorrowingsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="bookTitleCol" text="Book Title" prefWidth="200"/>
                                <TableColumn fx:id="authorCol" text="Author" prefWidth="150"/>
                                <TableColumn fx:id="borrowDateCol" text="Borrow Date" prefWidth="120"/>
                                <TableColumn fx:id="dueDateCol" text="Due Date" prefWidth="120"/>
                                <TableColumn fx:id="daysLeftCol" text="Days Left" prefWidth="100"/>
                                <TableColumn fx:id="fineAmountCol" text="Fine Amount" prefWidth="120"/>
                                <TableColumn fx:id="actionsCol" text="Actions" prefWidth="150"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
                <!-- Borrowing History Tab -->
                <Tab text="Borrowing History" closable="false">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Complete Borrowing History:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Button text="Refresh" onAction="#refreshBorrowingHistory" 
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 100; -fx-pref-height: 30; -fx-cursor: hand;"/>
                        </HBox>
                        <TableView fx:id="borrowingHistoryTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="historyBookTitleCol" text="Book Title" prefWidth="200"/>
                                <TableColumn fx:id="historyAuthorCol" text="Author" prefWidth="150"/>
                                <TableColumn fx:id="historyBorrowDateCol" text="Borrow Date" prefWidth="120"/>
                                <TableColumn fx:id="historyReturnDateCol" text="Return Date" prefWidth="120"/>
                                <TableColumn fx:id="historyStatusCol" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="historyFineCol" text="Fine Paid" prefWidth="120"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
                <!-- Due Dates Tab -->
                <Tab text="Due Dates & Reminders" closable="false">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Upcoming Due Dates:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Button text="Refresh" onAction="#refreshDueDates" 
                                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 100; -fx-pref-height: 30; -fx-cursor: hand;"/>
                        </HBox>
                        <TableView fx:id="dueDatesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="dueBookTitleCol" text="Book Title" prefWidth="200"/>
                                <TableColumn fx:id="dueDateCol2" text="Due Date" prefWidth="120"/>
                                <TableColumn fx:id="daysUntilDueCol" text="Days Until Due" prefWidth="120"/>
                                <TableColumn fx:id="urgencyCol" text="Urgency" prefWidth="100"/>
                                <TableColumn fx:id="fineRateCol" text="Daily Fine Rate" prefWidth="120"/>
                            </columns>
                        </TableView>
                        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-padding: 15;">
                            <Label text="Important Reminders:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Label text="• Books are due 14 days from the borrow date" style="-fx-text-fill: #7f8c8d;"/>
                            <Label text="• Overdue books incur a fine of $0.50 per day" style="-fx-text-fill: #7f8c8d;"/>
                            <Label text="• You can request extensions before the due date" style="-fx-text-fill: #7f8c8d;"/>
                            <Label text="• Return books on time to avoid fines and maintain good standing" style="-fx-text-fill: #7f8c8d;"/>
                        </VBox>
                    </VBox>
                </Tab>
            </TabPane>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 15;">
            <Button text="Back to Dashboard" onAction="#goBackToDashboard" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 35; -fx-cursor: hand;"/>
            <Label text="© 2024 Library Management System | My Borrowings" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
        </HBox>
    </bottom>
</BorderPane> 