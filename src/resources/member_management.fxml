<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.MemberManagementController"
            style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa 0%, #c3cfe2 100%);">
    
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 20;">
            <HBox alignment="CENTER" spacing="15">
                <Label text="👥" style="-fx-font-size: 36px;"/>
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Member Management" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="View and manage all registered students" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            
            <!-- Search and Filter Section -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search by name, email, or student ID" 
                          style="-fx-background-radius: 5; -fx-pref-width: 300; -fx-pref-height: 35;"/>
                <ComboBox fx:id="departmentFilter" promptText="Filter by Department" 
                          style="-fx-background-radius: 5; -fx-pref-width: 200; -fx-pref-height: 35;"/>
                <ComboBox fx:id="statusFilter" promptText="Filter by Status" 
                          style="-fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 35;"/>
                <Button text="🔍 Search" onAction="#handleSearch" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35; -fx-cursor: hand;"/>
                <Button text="🔄 Refresh" onAction="#refreshTable" 
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35; -fx-cursor: hand;"/>
            </HBox>
            
            <!-- Members Table -->
            <TableView fx:id="membersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="studentIdCol" text="Student ID" prefWidth="120"/>
                    <TableColumn fx:id="nameCol" text="Full Name" prefWidth="200"/>
                    <TableColumn fx:id="emailCol" text="Email" prefWidth="250"/>
                    <TableColumn fx:id="phoneCol" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="departmentCol" text="Department" prefWidth="150"/>
                    <TableColumn fx:id="yearCol" text="Year" prefWidth="80"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="finesCol" text="Total Fines" prefWidth="100"/>
                    <TableColumn fx:id="actionsCol" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>
            
            <!-- Statistics -->
            <HBox spacing="40" alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 15;">
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="totalMembersLabel" text="Total Members: 0" style="-fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="activeMembersLabel" text="Active: 0" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="blockedMembersLabel" text="Blocked: 0" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="totalFinesLabel" text="Total Fines: $0.00" style="-fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 15;">
            <Button text="← Back to Dashboard" onAction="#goBackToDashboard" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 35; -fx-cursor: hand;"/>
            <Button text="📊 Export Report" onAction="#exportReport" 
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;"/>
        </HBox>
    </bottom>
</BorderPane> 