<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.StudentDashboardController"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">
    
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 20;">
            <HBox alignment="CENTER" spacing="15">
                <Label text="🎓" style="-fx-font-size: 36px;"/>
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Student Portal" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label fx:id="welcomeLabel" text="Welcome" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
            
            <!-- Student Menu Grid -->
            <GridPane alignment="CENTER" hgap="20" vgap="20">
                
                <!-- Row 1 -->
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200; -fx-min-height: 150;"
                      GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Label text="📚" style="-fx-font-size: 32px;"/>
                    <Label text="Browse Books" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Button text="View Catalog" onAction="#openBrowseBooks" 
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200; -fx-min-height: 150;"
                      GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label text="📖" style="-fx-font-size: 32px;"/>
                    <Label text="My Borrowings" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Button text="View History" onAction="#openMyBorrowings" 
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200; -fx-min-height: 150;"
                      GridPane.rowIndex="0" GridPane.columnIndex="2">
                    <Label text="💰" style="-fx-font-size: 32px;"/>
                    <Label text="My Fines" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Button text="Check Fines" onAction="#openMyFines" 
                            style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;"/>
                </VBox>
                
                <!-- Row 2 -->
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200; -fx-min-height: 150;"
                      GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Label text="🔍" style="-fx-font-size: 32px;"/>
                    <Label text="Search Books" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Button text="Advanced Search" onAction="#openSearchBooks" 
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200; -fx-min-height: 150;"
                      GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="📅" style="-fx-font-size: 32px;"/>
                    <Label text="Due Dates" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Button text="Check Due Dates" onAction="#openDueDates" 
                            style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200; -fx-min-height: 150;"
                      GridPane.rowIndex="1" GridPane.columnIndex="2">
                    <Label text="👤" style="-fx-font-size: 32px;"/>
                    <Label text="My Profile" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Button text="View Profile" onAction="#openMyProfile" 
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;"/>
                </VBox>
            </GridPane>
            
            <!-- Status Information -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 10; -fx-padding: 20;">
                <Label text="📊 Account Status" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <HBox spacing="40" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="5">
                        <Label fx:id="booksBorrowedLabel" text="Books Borrowed: 0" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label fx:id="totalFinesLabel" text="Total Fines: $0.00" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Label fx:id="accountStatusLabel" text="Status: Active" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Logout Button -->
            <Button text="🚪 Logout" onAction="#handleLogout" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 40; -fx-cursor: hand; -fx-font-size: 14px;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 10;">
            <Label text="© 2024 Library Management System | Student Portal" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
        </HBox>
    </bottom>
</BorderPane> 